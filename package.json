{
  "name": "@syndigo/design-system",
  "version": "0.1.0",
  "description": "Syndigo Design System - React component library for Figma Make",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tokens.css": "./dist/tokens.css",
    "./guidelines/*": "./guidelines/*"
  },
  "files": [
    "dist",
    "guidelines"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:tokens": "node scripts/check-raw-values.js",
    "check": "npm run lint:tokens && npm run build",
    "prepublishOnly": "npm run build",
    "pack:dry": "npm pack --dry-run"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.0"
  },
  "keywords": [
    "react",
    "components",
    "design-system",
    "syndigo",
    "figma",
    "ui"
  ],
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/syndigo/design-system.git"
  }
}
